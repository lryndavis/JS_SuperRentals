{{#if addNewCity}}
<div class="container">
  <h1>New City</h1>
    <form>

      <div class="form-group">
        <label for="name">City</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="country">Country</label>
          {{input value=country id="country"}}
        </div>

      <button {{action 'saveCity'}}>Save</button>
    </form>
  </div>

{{else}}
  <button class="btn btn-success" {{action 'cityFormShow'}}>New City</button>
{{/if}}
